        </div></div>
        <div class="tableContainer">
            <h2 style="text-align: center;margin-bottom: 50px; font-size: 50px;font-weight: bold;">Invite For Projects</h2>
        <div class="search-sort-box">
            <span class="sort-text">Sort:</span>
            <button type="button" id="sort1" class="btn btn-warning btn-md" onClick=sortProjects()>Number of Projects
                Completed</button>
                <span class="sortSeparator">|</span>
            <button type="button" id="sort2" class="btn btn-warning btn-md" onClick=sortMembers()>Number of
                Members</button><span class="sortSeparator">|</span>
            <button type="button" id="sort3" class="btn btn-warning btn-md" onClick=sortYears()>Years Operated</button>
        </div>
        <div class="search-box">
            <label>Search By NGO Name :</label>
            <input id="nameInput"onkeyup=searchByName()></input>
            <span class="sort-text">Search by Category :</span>
            <select onChange=searchCategory() id="mySelect">
                <option value="Self-Help">Self-Help</option>
                <option value="Animals">Animals</option>
                <option value="HealthCare">HealthCare</option>
                <option value="De-tox">De-tox</option>
                <option value="Old-Age-Home" >Old-Age Home</option>
                <option value="Others">Others</option>
            </select>
        </div>
        <table id="myTable" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th style="width: 200px;" scope="col">NGO Name</th>
                    <th scope="col">Category</th>
                    <th scope="col"> Number of Projects Completed</th>
                    <th scope="col">Number Of Members</th>
                    <th scope="col">Years Operated</th>
                </tr>
            </thead>
            <tbody>
                <%for(let i=0;i<myResponses.length;i++){%>
                    <tr data-toggle="modal" style="cursor: pointer;" data-target=<%="#myModal"+i%>>
                        <td scope="row"><%=myResponses[i].name.toUpperCase()%></td>
                        <td><%=myResponses[i].category%></td>
                        <td><%=myResponses[i].projects%></td>
                        <td><%=myResponses[i].people%></td>
                        <td><%=myResponses[i].years%></td>
                    <td><a href=<%="/gov/invite/"+myResponses[i].registrationid %> class="btn btn-success">Invite</a></td>
                </tr>
                <div class="modal" id=<%="myModal"+i%>>
                    <div class="modal-dialog">
                        <div class="modal-content">

                          
                            <div class="modal-header">
                                <h4 class="modal-title"><%=myResponses[i].name.toUpperCase()%></h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                          
                            <div class="modal-body">
                                <h5> Details-</h5>
                                <div>Email Id : <%=myResponses[i].emailid%></div>
                                <div>Category : <%=myResponses[i].category%></div>
                                <div>Organizing : <%=myResponses[i].organize%></div>
                                <div>Proposal : <%=myResponses[i].reasons%></div>
                                <div>Numbers of Years Operated : <%=myResponses[i].years%></div>
                                <div>Numbers of Memebers : <%=myResponses[i].people%></div>
                                <div>Numbers of Projects Completed : <%=myResponses[i].projects%></div>
                                <div>Website : <%=myResponses[i].website%></div>
                                <div>Address of office : <%=myResponses[i].address%></div>
                                <div>State : <%=myResponses[i].state%></div>
                            </div>

                            
                            <div class="modal-footer">
                                <a href=<%="/gov/invite/"+myResponses[i]._id %> class="btn btn-success">Invite</a>
                            </div>

                        </div>
                    </div>
                </div>
                <%}%>
            </tbody>
        </table>
        </div>
    </div>
</body>
<script>
    let projectSort = false;
    let yearSort = false;
    let memberSort = false;

    let projectBtn = document.getElementById("sort1");
    let memberBtn = document.getElementById("sort2");
    let yearBtn = document.getElementById("sort3");

    function sortProjects() {
        projectSort = true;
        projectBtn.classList.toggle("btn-warning");
        projectBtn.className += " btn-success";

        yearBtn.classList.remove("btn-success");
        yearBtn.classList.add("btn-warning");

        memberBtn.classList.remove("btn-success");
        memberBtn.classList.add("btn-warning");

        console.log(projectBtn.className);
        console.log("i am here");
        let table, rows, switching, i, x, y, shouldSwitch;

        table = document.getElementById("myTable");
        switching = true;
        while (switching) {
            switching = false;
            rows = table.rows;
            for (i = 1; i < (rows.length - 1); i++) {
                shouldSwitch = false;
                x = rows[i].getElementsByTagName("TD")[2];
                y = rows[i + 1].getElementsByTagName("TD")[2];
                if (Number(x.innerHTML) < Number(y.innerHTML)) {
                    shouldSwitch = true;
                    break;
                }
            }
            if (shouldSwitch) {
                rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                switching = true;
            }
        }
    }
    function sortMembers() {
        console.log("i am here");
        memberSort = true;
        memberBtn.classList.toggle("btn-warning");
        memberBtn.className += " btn-success";

        projectBtn.classList.remove("btn-success");
        projectBtn.classList.add("btn-warning");

        yearBtn.classList.remove("btn-success");
        yearBtn.classList.add("btn-warning");

        let table, rows, switching, i, x, y, shouldSwitch;

        table = document.getElementById("myTable");
        switching = true;
        while (switching) {
            switching = false;
            rows = table.rows;
            for (i = 1; i < (rows.length - 1); i++) {
                shouldSwitch = false;
                x = rows[i].getElementsByTagName("TD")[3];
                y = rows[i + 1].getElementsByTagName("TD")[3];
                if (Number(x.innerHTML) < Number(y.innerHTML)) {
                    shouldSwitch = true;
                    break;
                }
            }
            if (shouldSwitch) {
                rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                switching = true;
            }
        }
    }

    function sortYears() {
        yearSort = true;
        yearBtn.classList.toggle("btn-warning");
        yearBtn.className += " btn-success";

        projectBtn.classList.remove("btn-success");
        projectBtn.classList.add("btn-warning");

        memberBtn.classList.remove("btn-success");
        memberBtn.classList.add("btn-warning");

        console.log("i am here");
        let table, rows, switching, i, x, y, shouldSwitch;

        table = document.getElementById("myTable");
        switching = true;
        while (switching) {
            switching = false;
            rows = table.rows;
            for (i = 1; i < (rows.length - 1); i++) {
                shouldSwitch = false;
                x = rows[i].getElementsByTagName("TD")[4];
                y = rows[i + 1].getElementsByTagName("TD")[4];
                if (Number(x.innerHTML) < Number(y.innerHTML)) {
                    shouldSwitch = true;
                    break;
                }
            }
            if (shouldSwitch) {
                rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                switching = true;
            }
        }
    }
   
    function searchCategory() {
        console.log("heyyy");
  // Declare variables
  let select, filter, table, tr, td, i, txtValue;
  select = document.getElementById("mySelect");
  console.log(select);
  filter = select.value.toUpperCase();
  console.log(filter);
  table = document.getElementById("myTable");
  tr = table.getElementsByTagName("tr");

  // Loop through all table rows, and hide those who don't match the search query
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[1];
    if (td) {
      txtValue = td.textContent || td.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }
  }
}

function searchByName(){
    let input, filter, table, tr, td, i, txtValue;
    console.log("hey")
  input = document.getElementById("nameInput");
  filter = input.value.toUpperCase();
  table = document.getElementById("myTable");
  tr = table.getElementsByTagName("tr");

  // Loop through all table rows, and hide those who don't match the search query
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[0];
    if (td) {
      txtValue = td.textContent || td.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }
  }
}


</script>
